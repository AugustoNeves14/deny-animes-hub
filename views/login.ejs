                    <!-- Slides ser√£o preenchidos via JavaScript -->
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>

    <!-- PAINEL CENTRAL - FORMUL√ÅRIOS -->
    <div class="center-panel">
        <div class="auth-container">
