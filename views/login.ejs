            <input type="hidden" id="verify-phone-number" name="phoneNumber">
            
            <div class="auth-form__group">
                <i class="fas fa-shield-alt input-icon"></i>
                <input type="text" id="otp-code" name="otp" required 
                       placeholder="C칩digo de 6 d칤gitos" pattern="[0-9]{6}" 
                       title="Digite o c칩digo de 6 d칤gitos" maxlength="6">
            </div>
            
            <div class="auth-form__actions">
                <button type="submit" class="btn btn--primary">
                    <span class="btn-text">Verificar e Entrar</span>
                    <i class="fas fa-check-circle"></i>
                </button>
            </div>
            
            <div class="auth-form__footer">
                <p>N칚o recebeu? <a href="#" id="resend-otp-link">Reenviar c칩digo</a></p>
                <p>Voltar para <a class="form-switch-link" data-target="phone-login-form">alterar n칰mero</a></p>
            </div>
